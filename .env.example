# Example environment variables
# Copy this file to .env and fill in your actual values

# Server Configuration
# For local development
PORT=3000

# Google Play Console OAuth Configuration
# Get these values from Google Cloud Console:
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing
# 3. Enable Google Play Developer API
# 4. Go to Credentials > Create Credentials > OAuth 2.0 Client IDs
# 5. Set Application type to "Web application"
# 6. Add authorized redirect URI: http://localhost:3000/api/publishing/oauth/callback

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/publishing/oauth/callback

# Optional: For production deployment
# GOOGLE_REDIRECT_URI=https://yourdomain.com/api/publishing/oauth/callback
NODE_ENV=development

# For production deployment (Render uses PORT=10000)
# PORT=10000
# NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rapid_saas_ai_store
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_SSL=false

# Supabase Configuration (Alternative to traditional DB)
SUPABASE_URL=https://hsqpadurdkdtsgosamep.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# AI Services API Keys
# Get your OpenAI API key from: https://platform.openai.com/account/api-keys
# Format: sk-proj-... or sk-...
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# AI Configuration - Choose your provider
# Option 1: Ollama (Free Local AI) - Recommended for development
TRAE_AI_PROVIDER=ollama
TRAE_AI_API_URL=http://localhost:11434
TRAE_AI_MODEL=codellama
TRAE_AI_API_KEY=

# Option 2: Trae AI (Paid Service)
# TRAE_AI_PROVIDER=trae
# TRAE_AI_API_URL=https://api.trae.ai
# TRAE_AI_API_KEY=your_trae_ai_api_key_here

# Option 3: OpenAI (Alternative)
# TRAE_AI_PROVIDER=openai
# TRAE_AI_API_URL=https://api.openai.com/v1
# TRAE_AI_API_KEY=your_openai_api_key_here

# Image Generation & Storage
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# App Store APIs (Optional)
APPLE_CONNECT_API_KEY=your_apple_connect_api_key
GOOGLE_PLAY_API_KEY=your_google_play_api_key

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d

# App Generation Settings
APP_GENERATION_TIMEOUT=300000
MAX_CONCURRENT_GENERATIONS=5
DEFAULT_APP_CATEGORY=utility

# Revenue Split (percentage)
PLATFORM_REVENUE_SHARE=30
DEVELOPER_REVENUE_SHARE=70

# Frontend URLs
# Development
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# Production (update with your actual domain)
# FRONTEND_URL=https://your-app-name.onrender.com
# API_BASE_URL=https://your-app-name.onrender.com/api

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,svg,pdf,zip

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Demo Mode (set to true to enable demo features)
DEMO_MODE=false
DEMO_APPS_LIMIT=5