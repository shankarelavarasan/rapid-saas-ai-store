# Production Environment Configuration
# Rapid SaaS AI Store - Professional Deployment

# Server Configuration
NODE_ENV=production
PORT=10000

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long_for_production
SESSION_SECRET=your_super_secure_session_secret_for_production_deployment

# Database Configuration - Supabase (Recommended for Production)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key

# AI Services Configuration
# OpenAI API (Primary AI Provider)
OPENAI_API_KEY=sk-your_production_openai_api_key

# Google Gemini API (Secondary AI Provider)
GEMINI_API_KEY=your_production_gemini_api_key

# Anthropic Claude API (Tertiary AI Provider)
ANTHROPIC_API_KEY=sk-ant-your_production_anthropic_api_key

# Trae AI Configuration (Professional AI Service)
TRAE_AI_PROVIDER=openai
TRAE_AI_API_URL=https://api.openai.com/v1
TRAE_AI_API_KEY=sk-your_production_openai_api_key
TRAE_AI_MODEL=gpt-4-turbo-preview

# File Storage & CDN - Cloudinary
CLOUDINARY_CLOUD_NAME=your_production_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_production_cloudinary_api_key
CLOUDINARY_API_SECRET=your_production_cloudinary_api_secret

# Payment Processing - Stripe
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_stripe_webhook_secret

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_production_email@gmail.com
SMTP_PASS=your_production_email_app_password

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
ALLOWED_ORIGINS=https://shankarelavarasan.github.io,https://rapid-saas-ai-store.onrender.com,https://your-custom-domain.com

# App Store Integration
GOOGLE_PLAY_DEVELOPER_KEY=your_google_play_developer_key
APPLE_APP_STORE_CONNECT_KEY=your_apple_app_store_connect_key

# Social Media Integration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
LOG_LEVEL=info

# Cache Configuration
REDIS_URL=redis://your_redis_instance_url:6379
CACHE_TTL=3600

# Feature Flags
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_PARTNERSHIPS=true

# Performance Configuration
MAX_FILE_SIZE=50mb
REQUEST_TIMEOUT=30000
CONCURRENCY_LIMIT=100

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-csp-report-endpoint.com/report

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30